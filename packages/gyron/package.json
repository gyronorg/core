{
  "name": "gyron",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.25",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "yarn build:dts && yarn build:esm && yarn build:browser && yarn build:cjs",
    "build:esm": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/esm/index.js --format=esm --platform=node --external:@gyron/*",
    "build:cjs": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/cjs/index.js --format=cjs --platform=node --external:@gyron/*",
    "build:browser": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/browser/index.js --format=esm --platform=browser --define:__DEV__=false --define:__WARN__=true",
    "build:dts": "rollup -c ../../rollup.config.js"
  },
  "dependencies": {
    "@gyron/runtime": "^0.0.25",
    "csstype": "^3.1.0"
  }
}
