{
  "name": "@gyron/runtime",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "version": "0.0.10-alpha.2",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "yarn build:dts && yarn build:esm && yarn build:cjs",
    "build:esm": "esbuild src/index.ts --bundle --sourcemap --minify --outfile=dist/esm/index.js --format=esm --platform=node --define:__DEV__=false --define:__WARN__=true",
    "build:cjs": "esbuild src/index.ts --bundle --sourcemap --outfile=dist/cjs/index.js --format=cjs --platform=node --define:__DEV__=false --define:__WARN__=true",
    "build:dts": "rollup -c",
    "test": "jest"
  },
  "devDependencies": {
    "@gyron/dom-client": "^0.0.10-alpha.2",
    "@gyron/reactivity": "^0.0.10-alpha.2",
    "@gyron/shared": "^0.0.10-alpha.2"
  }
}
